<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ui_lbl_agree_terms_ind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/ui_lbl_agree_terms_ind"
                android:text="@string/GREET_MESSAGE"
                android:textAppearance="@android:style/TextAppearance.Widget.TextView"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mane vadinkite" />

            <EditText
                android:id="@+id/ui_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:hint="@string/USER_NAME"
                android:inputType="textPersonName" />





            <TextView
                android:id="@+id/textViewGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lytis" />

            <Spinner
                android:id="@+id/ui_user_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:entries="@array/gender_array"
                android:spinnerMode="dialog" />



            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Man metų yra" />

            <Spinner
                android:id="@+id/ui_user_age_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:entries="@array/age_group_array"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Noriu kad vektų" />

            <Switch
                android:id="@+id/ui_show_recognition_ind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Automatinis atpažinimas"
                android:textOff="išjungta"
                android:textOn="Įjungta" />

            <Switch
                android:id="@+id/ui_agree_terms_ind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:checked="false"
                android:text="Sutinku su sąlygomis" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>